<div class="main">
  <div class="sub-main">
    <p><b>物件名：</b><%= @property.name %></p>
    <p><b>賃料：</b><%= @property.rent %>円</p>
    <p><b>住所：</b><%= @property.address %></p>
    <p><b>築年数：</b><%= @property.age_of_building %></p>
    <p><b>備考：</b><%= @property.remarks %></p>
  </div>

  <hr>

  <% if @nearest_stations.blank? %>
      <p>※最寄り駅の登録なし</p>
  <% else %>
    <% @nearest_stations.each_with_index do |nearest_station, i| %>
      <p><b>最寄り駅<%= i + 1 %></b></p>
      <div class="sub-main">
        <p><b>路線名 </b><%= nearest_station.line_name %></p>
        <p><b>駅名 </b><%= nearest_station.station_name %></p>
        <p><b>徒歩分数 </b><%= nearest_station.walking_minutes %>分</p>
      </div>
    <% end %>
  <% end %>

  <%= link_to '編集', edit_property_path %> |
  <%= link_to '戻る', properties_path %>
</div>
