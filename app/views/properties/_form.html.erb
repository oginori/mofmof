<div class="main">
  <%= form_with(model: @property, local: true) do |f| %>
  <%= f.label :name, '物件名' %><br>
  <%= f.text_field :name %><br>
  <%= f.label :rent, '賃料' %><br>
  <%= f.text_field :rent %>円
  <br>
  <%= f.label :adress, '住所' %><br>
  <%= f.text_field :address %><br>
  <%= f.label :age_of_building, '築年数' %><br>
  <%= f.text_field :age_of_building %>年<br>
  <%= f.label :remarks, '備考' %><br>
  <%= f.text_area :remarks%><br><br>

  <hr>

  <%= f.fields_for :nearest_stations do |nearest_station| %>
    <h3>最寄り駅<%= nearest_station.index + 1 %></h3>
    <%= nearest_station.label :line_name, '路線名' %><br>
    <%= nearest_station.text_field :line_name %><br>
    <%= nearest_station.label :station_name, '最寄駅' %><br>
    <%= nearest_station.text_field :station_name %><br>
    <%= nearest_station.label :walking_minutes, '徒歩分数' %><br>
    <%= nearest_station.text_field :walking_minutes %>分<br><br>
  <% end %>

  <%= f.submit '登録する' %>
<% end %>

<br>
<%= link_to '戻る', properties_path %>

</div>

<br>
